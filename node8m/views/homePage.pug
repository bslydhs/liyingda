doctype html
html
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0")
        meta(content="telephone=no,email=no", name="format-detection")
        meta(content="yes", name="apple-mobile-web-app-capable")
        meta(name="apple-mobile-web-app-status-bar-style", content="black")
        meta(name="apple-touch-fullscreen", content="yes")
        link(rel="shortcut icon", href="/images/title.ico", type="image/x-icon")
        link(rel="apple-touch-icon", href="/static/images/identity/HTML5_Badge_64.png")
        link(rel="stylesheet", href="/stylesheets/homePage.css")
        script(src="/javascripts/jquery-1.12.4.js")
        script(src="/javascripts/homePage.js")
        title 首页
    body
        div(class="top")
            img(src="/images/1-1.png", class="top-img1")
            div(class="top-box")
                img(src="/images/1-2.png")
                input(type="text", placeholder="小米8" id="input")
            img(src="/images/1-3.png", class="top-img2")
            div(class="top-ul")
                span 推荐
                span 手机
                span 发烧购物节
                span 智能
                span 电视
                span 笔记本
                span 家电
                span 新款游戏本
                span 大内存手机
                span 生活周边
                span 盒子
        div(class="middle")
            ul(class="ul-top")
                li
                    img(src="/images/2-1.jpg")
                li
                    img(src="/images/2-2.jpg")
                li
                    img(src="/images/2-3.jpg")
                li
                    img(src="/images/2-4.jpg")
            div(class="text")
                span 商城早报
                span 神秘新品预告，小米MIX 2S邀你鉴宝
            div(class="first-img")
                img(src="/images/3-1.jpg", class="first-img1")
                img(src="/images/3-2.jpg", class="first-img2")
                img(src="/images/3-3.jpg", class="first-img3")
            a
                img(src="/images/4.jpg", style="width:100%")
            div
                div
                    p(class="p4") 小米闪购
                div(class="purchase2")
                    div
                        img(src="images/5-1.jpg")
                        span ￥1
                    div
                        img(src="images/5-2.jpg")
                        span ￥2
                    div
                        img(src="images/5-3.jpg")
                        span ￥3
            a
                img(src="/images/6.jpg", style="width:100%")
            div(class="selection")
                p(class="p4") 每日精选
                a
                    img(src="/images/7.jpg", style="width:100%")
                div#insertpage(class="selection-div")
                    each arr in sellgood
                        div
                            img(src=arr.image)
                            p(class="p1") #{arr.name}
                            p(class="p2") #{arr.details}
                            p(class="p3") #{arr.price}
                //button(id="button") 加载更多。。。
        div(class="bottom")
            a(href="homePage")
                div(class="bottom-ipn")
                    img(src="/images/b-11.png")
                    span(class="span1") 首页
            a(href="classify")
                div(class="bottom-ipn")
                    img(src="/images/b-2.png")
                    span 分类
            a(href="find")
                div(class="bottom-ipn1")
                    img(src="/images/logo.png")
                    span 发现
            a(href="shopping")
                div(class="bottom-ipn")
                    img(src="/images/b-3.png")
                    span 购物车
            a(href="myself")
                div(class="bottom-ipn")
                    img(src="/images/b-4.png")
                    span 我的
